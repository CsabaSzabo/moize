{
  "env": {
    "development": {
      "plugins": ["add-module-exports"],
      "presets": [
        [
          "env",
          {
            "exclude": ["transform-es2015-typeof-symbol"],
            "loose": true
          }
        ],
        "stage-2"
      ]
    },
    "es": {
      "presets": [
        [
          "env",
          {
            "exclude": ["transform-es2015-typeof-symbol"],
            "loose": true,
            "modules": false
          }
        ],
        "stage-2"
      ]
    },
    "production": {
      "plugins": ["add-module-exports"],
      "presets": [
        [
          "env",
          {
            "exclude": ["transform-es2015-typeof-symbol"],
            "loose": true
          }
        ],
        "stage-2"
      ]
    },
    "test": {
      "presets": [
        [
          "env",
          {
            "exclude": ["transform-es2015-typeof-symbol"],
            "loose": true
          }
        ],
        "stage-2"
      ]
    }
  },
  "plugins": ["syntax-flow", "transform-flow-strip-types"]
}
